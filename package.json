{
  "name": "simple-thermostat",
  "version": "0.12.1",
  "description": "A different take on the thermostat card for Home Assistant Lovelace UI",
  "main": "simple-thermostat.js",
  "repository": "git@github.com:nervetattoo/simple-thermostat.git",
  "author": "Raymond Julin <raymond.julin@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "husky": "^1.3.1",
    "prettier": "1.15.3",
    "pretty-quick": "^1.8.0",
    "release-it": "^9.8.1"
  },
  "scripts": {
    "release": "release-it",
    "update-tracker": "node scripts/generate-tracker-json.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "release-it": {
    "github": {
      "release": true
    },
    "scripts": {
      "afterBump": "yarn update-tracker ${name} ${version} $(date +'%Y-%m-%d')"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
